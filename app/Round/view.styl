.round
  display flex
  flex-flow row wrap
  justify-content space-between
  align-items flex-start
  align-content flex-start
  width 100%
  height 100%
  &__top
    flex 1 1 360px
    min-width 360px
  &__bottom
    @extend .round__top

.players
  display flex
  flex-flow row wrap
  justify-content space-around
  align-items flex-start
  align-content flex-start
  &__item
    flex 0 0 auto

.player
  &__info
    &::before
      font normal normal normal 100%/1 FontAwesome
      font-size inherit
      display inline
    &_simple
      &::before
        content "\f007"
        color white
    &_master
      &::before
        content "\f007"
        color red
