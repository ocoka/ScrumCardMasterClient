.form
  display flex
  flex-flow column nowrap
  justify-content center
  align-items stretch
  align-content stretch
  width 100%
  height 100%

.group
  flex 0 0 auto
  display flex
  flex-flow row wrap
  justify-content center
  align-items  center
  align-content  flex-start
  margin 1.6rem 0.5rem
  width auto
  &__error
    flex 0 1 auto
  &__right
    flex 1 1 0
    display  flex
    flex-flow  column nowrap
    justify-content  flex-start
    align-items  flex-start
    align-content  stretch
    min-width  12rem
  &__label
    padding 0 0.5rem 0.5em 0
  &__left
    @extend .group__right
    align-items flex-end
  &__input
    font-size  1.2rem
    background-color  black
    background-image  linear-gradient(to bottom, black 0%,#1D1D1D 66%)
    border  1px solid #4E4848
    color  #9CA088
    padding  0.5rem 1.5rem
    border-radius  5px
    width  100%
    max-width  20rem
    /.success>&,/.success&
      box-shadow #1E901E 0 0 4px 1px
    /.error>&,/.error&
      box-shadow #BB1E1E 0 0 4px 1px
      color #A05151

  &__button
    box-shadow inset 0px 1px 0px 0px #a6827e
    background linear-gradient(to bottom, #7d5d3b 5%, #634b30 100%)
    background-color #7d5d3b
    border-radius 3px
    border 1px solid #54381e
    display inline-block
    cursor pointer
    color #ffffff
    padding  0.5rem 1.5rem
    text-decoration none
    font-size  1.2rem
    text-shadow 0px 1px 0px #4d3534
    &:disabled
      box-shadow inset 0px 1px 0px 0px #524442
      background none
      background-color #52412F
      color #2D221A
      cursor not-allowed
    >i
      margin-left -1rem
    &:active:enabled
      position relative
      top 1px
    &:hover:enabled
      background linear-gradient(to bottom, #634b30 5%, #7d5d3b 100%)
      background-color #634b30
.error
  color red
  text-align center
  &__message
    font-weight 600
@media screen and (min-width:400px)
  .group
    &_left-empty:before
      flex 1 1 0
      content ""
      display block
      min-width 12rem
@media screen and (max-width:400px)
  .group
    &__right,&__left
      align-items center
